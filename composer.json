{
    "name": "grossberger-georg/run-script",
    "type": "typo3-cms-extension",
    "description": "Run a server-side script via the backend",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GrossbergerGeorg\\RunScript\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrossbergerGeorg\\RunScript\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "typo3/cms-backend": "^10.4 || ^11.1",
        "typo3/cms-fluid": "^10.4 || ^11.1"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "run_script"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "phpunit/phpunit": "^9.5",
        "mikey179/vfsstream": "^1.6"
    }
}
